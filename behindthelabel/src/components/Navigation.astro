---
import "../styles/reset.css";
import "../styles/global.css";
import { Image } from "astro:assets";
import museak from "../../public/assets/icons/musea-kortrijk.svg";
---

<nav>
    <a href="/behindthelabel/">
        <Image class="museak" src={museak} alt="musea kortrijk logo" />
    </a>
    <div class="hamburger">
        <span></span>
        <span></span>
        <span></span>
    </div>

    <ul class="nav-menu">
        <li>
            <a class="nav-item" href="/behindthelabel/#about">about us</a>
        </li>
        <li><a class="nav-item" href="/behindthelabel/#map">map</a></li>
        <li>
            <a class="nav-item" href="/behindthelabel/overview">artworks</a>
        </li>
    </ul>
</nav>

<style>
    nav {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        border-bottom: 0.1rem solid var(--black);
        max-width: 100%;
        position: relative;
    }

    .museak {
        height: auto;
        width: 15rem;
    }

    .nav-menu {
        display: flex;
        flex-direction: row;
        list-style: none;
        position: absolute;
        top: 2rem;
        right: 0;
        padding: 1rem;
        display: flex;
        flex-direction: column;
        gap: 15px;
        opacity: 0;
        pointer-events: none;
        transform: translateY(-20px);
        transition:
            opacity 0.3s,
            transform 0.3s;
    }

    .nav-item {
        text-decoration: none;
    }

    .hamburger span {
        display: block;
        height: 0.1rem;
        width: 2.5rem;
        background: var(--white);
        border-radius: 2px;
        transition: all 0.3s ease;
        margin: 0.8rem;
    }

    .nav-menu.active {
        opacity: 1;
        pointer-events: auto;
        transform: translateY(0);
        background-color: var(--secondary-color);
    }
</style>
